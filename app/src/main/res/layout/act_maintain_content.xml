<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_background_F0F1F2"
    tools:context=".maintain.activity.MaintainContentActivity">

    <EditText
        android:id="@+id/et_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_280"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/sel_input_field_white"
        android:paddingStart="@dimen/dp_10"
        android:hint="请输入维修问题"
        android:gravity="top"
        android:paddingTop="@dimen/dp_5"
        tools:ignore="RtlSymmetry" />


    <TextView
        android:id="@+id/tv_return"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/et_info"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:text="返回"
        android:gravity="center"
        android:textColor="@color/fun_999999"
        android:textSize="@dimen/sp_16"
        android:background="@color/color_white"/>

    <TextView
        android:id="@+id/tv_accomplish"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/et_info"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color_login_button"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/fun_FFFFFF"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>