<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_166"
        android:background="@drawable/sel_logistics_background"
        android:contentDescription="@string/app_name" />

    <TextView
        style="@style/style_font_white_bigger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:text="欢迎使用智慧警保后勤系统"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/ll_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/sel_border_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_restaurant"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_meal"
                android:text="餐厅"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_haircut"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_haircut"
                android:text="理发店"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_drugstore"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_drugstore"
                android:text="药店"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_laundry"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_laundry"
                android:text="洗衣店"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_stadium"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_stadium"
                android:text="运动场"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_maintain"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_maintain"
                android:text="维修"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/ll_function"
        android:background="@color/color_white"
        android:gravity="center_vertical">

        <TextView
            style="@style/style_font_black_small"
            android:layout_marginStart="@dimen/dp_15"
            android:drawableStart="@drawable/svg_logistics_hot"
            android:drawablePadding="@dimen/dp_5"
            android:text="今日头条"
            android:textColor="@color/color_black"
            tools:ignore="HardcodedText" />

        <TextView
            style="@style/style_font_gray_small"
            android:text=" 丨 今天运动场已满"
            tools:ignore="HardcodedText" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_office_supplies"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_98"
        android:layout_below="@id/ll_hot"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/sel_logistics_office_supplies"
        android:gravity="center_vertical">

        <TextView
            style="@style/style_font_white"
            android:layout_marginStart="@dimen/dp_14"
            android:text="办公用品申报"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/svg_logistics_office_supplies"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_vehicle_apply"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_98"
        android:layout_below="@id/ll_hot"
        android:layout_alignTop="@id/rl_office_supplies"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/sel_logistics_vehicle_apply"
        android:gravity="center_vertical">

        <TextView
            style="@style/style_font_white"
            android:layout_marginStart="@dimen/dp_14"
            android:text="用车管理申报"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


        <ImageView
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/svg_logistics_vehicle_apply"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>

</RelativeLayout>