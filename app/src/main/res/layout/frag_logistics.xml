    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎使用智慧警保后勤系统"
        android:textColor="@color/font_white"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_53"
        android:layout_marginLeft="@dimen/dp_54"/>


    <RelativeLayout
        android:id="@+id/rt_layout"
        android:layout_width="@dimen/dp_344"
        android:layout_height="@dimen/dp_181"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_120"
        android:background="@drawable/sel_logistics_frame_white">

        <RelativeLayout
            android:id="@+id/rl_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_22">

            <ImageView
                android:id="@+id/image_dining"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/sel_logistics_dining_background" />

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@drawable/svg_dining_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_dining"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="餐厅"
                android:textColor="@color/fun_logistics_666666"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/barber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_151"
            android:layout_marginTop="@dimen/dp_22">

            <ImageView
                android:id="@+id/image_barber"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/sel_logistics_barber_background" />

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@drawable/svg_barber_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_barber"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="理发店"
                android:textColor="@color/fun_logistics_666666"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drugstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_151"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_36">

            <ImageView
                android:id="@+id/image_drugstore"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/sel_logistics_drugstore_background" />

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@drawable/svg_drugstore_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_drugstore"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="药店"
                android:textColor="@color/fun_logistics_666666"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/laundry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_36">

            <ImageView
                android:id="@+id/image_laundry"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/sel_logistics_laundry_background" />

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@drawable/svg_laundry_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_laundry"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="洗衣店"
                android:textColor="@color/fun_logistics_666666"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stadium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_151"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_36">

            <ImageView
                android:id="@+id/image_stadium"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/sel_logistics_stadium_background" />

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@drawable/svg_stadium_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_stadium"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="运动场"
                android:textColor="@color/fun_logistics_666666"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/maintain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_151"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_36">

            <ImageView
                android:id="@+id/image_maintain"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/sel_logistics_maintain_background" />

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@drawable/svg_maintain_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_maintain"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="维修"
                android:textColor="@color/fun_logistics_666666"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/rt_layout"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_white">

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/svg_hint_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_14"
            android:text="今日头条"
            android:textColor="@color/fun_logistics_1B1B1B"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/dp_15"
            android:background="@color/color_logistics_E5E5E5"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_13"/>

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="今天运动场已满"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_97"
            android:textColor="@color/fun_logistics_666666"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/articlesApply"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_98"
        android:layout_below="@id/rl_hint"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/sel_logistics_things_apply_backgroud">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="办公用品申报"
            android:textColor="@color/font_white"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_14"
            android:textStyle="bold"/>
        
        <ImageView
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_31"
            android:background="@drawable/svg_articles_apply_img"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vehicleApply"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_98"
        android:layout_below="@id/rl_hint"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/sel_logistics_vehicle_apply_backgroud">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用车管理申报"
            android:textColor="@color/font_white"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_14"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_29"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_31"
            android:background="@drawable/svg_vehicle_apply_img"/>

    </RelativeLayout>

</RelativeLayout>