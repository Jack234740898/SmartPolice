<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.activity.LoginActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@mipmap/bg_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:text="@string/login_title"
        android:textColor="@color/font_white"
        android:textSize="@dimen/sp_30" />


    <RelativeLayout
        android:layout_width="@dimen/dp_317"
        android:layout_height="@dimen/dp_262"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_154"
        android:background="@drawable/sel_border_white">

        <View
            android:layout_width="@dimen/dp_275"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/sel_input_field_shadow" />

        <RelativeLayout
            android:layout_width="@dimen/dp_275"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@drawable/sel_input_field_white">

            <ImageView
                android:id="@+id/iconLoginPassword"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/svg_login_user" />


            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_toRightOf="@id/iconLoginPassword"
                android:background="@null"
                android:hint="请输入用户名"
                android:text="demo1" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_275"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_102"
            android:background="@drawable/sel_input_field_shadow" />

        <RelativeLayout
            android:layout_width="@dimen/dp_275"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_100"
            android:background="@drawable/sel_input_field_white">

            <ImageView
                android:id="@+id/iconLoginUser"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/svg_login_password" />


            <EditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_toLeftOf="@id/passwordType"
                android:layout_toRightOf="@id/iconLoginUser"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:text="666666" />

            <ImageView
                android:id="@+id/passwordType"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_17"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_21"
                android:background="@drawable/svg_login_hide_password" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tvRevampPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_100"
            android:text="修改密码？"
            android:textColor="@color/color_login_font_amend" />


        <TextView
            android:id="@+id/loginButton"
            android:layout_width="@dimen/dp_275"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_34"
            android:background="@drawable/sel_login_button_click_type"
            android:gravity="center"
            android:singleLine="true"
            android:text="登录"
            android:textColor="@color/color_white" />


    </RelativeLayout>

</RelativeLayout>