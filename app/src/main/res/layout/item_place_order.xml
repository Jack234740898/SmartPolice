<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_76"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_6"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_meal_goods"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_toEndOf="@id/iv_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/style_font_black_bigger"
            android:text="小炒手撕包菜"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/style_font_white_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="¥9.8"
            android:textColor="@color/font_red"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_44"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_cut"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/svg_place_order_cut" />

        <EditText
            android:id="@+id/et_count"
            style="@style/style_font_black"
            android:layout_width="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:background="@color/color_transparent"
            android:focusable="false"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/svg_place_order_add" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/iv_icon"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_42"
        android:background="@color/color_gray" />
</RelativeLayout>