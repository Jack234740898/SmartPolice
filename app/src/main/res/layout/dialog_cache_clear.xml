<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_common_dialog_layout"
    android:padding="@dimen/dp_24">

    <TextView
        style="@style/style_font_black_big"
        android:layout_gravity="center"
        android:text="温馨提示"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            style="@style/style_font_gray"
            android:text="当前缓存约："
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_cache_size"
            style="@style/style_font_gray"
            tools:text="120M" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        style="@style/style_font_black"
        android:layout_marginTop="@dimen/dp_5"
        tools:text="离线缓存可以帮助你在没有网络的" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/btn_cancel"
            style="@style/style_common_btn_small"
            android:layout_weight="1"
            android:background="@drawable/sel_btn_disable_small"
            android:text="取消"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btn_confirm"
            style="@style/style_common_btn_small"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/sel_btn_able_small"
            android:text="确定"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>