<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bar_code"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        android:layout_margin="@dimen/dp_20"
        android:contentDescription="@string/placeholder"
        android:scaleType="centerCrop"
        android:src="@drawable/svg_bar_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bar_code"
        style="@style/style_font_black"
        android:layout_marginTop="@dimen/dp_4"
        android:text="@string/default_bar_code"
        android:textSize="@dimen/sp_22"
        app:layout_constraintEnd_toEndOf="@id/iv_bar_code"
        app:layout_constraintStart_toStartOf="@id/iv_bar_code"
        app:layout_constraintTop_toBottomOf="@id/iv_bar_code" />


    <ImageView
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_40"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/svg_pay_qr_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bar_code" />

</androidx.constraintlayout.widget.ConstraintLayout>